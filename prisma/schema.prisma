generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  imgUrl      String
  price       Int
  title       String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("product")
}
